      <JourneyInsights TelemetryEngine="ApplicationInsights" InstrumentationKey="26fd1108-cb53-43a4-8d98-7a30615ed1fc" DeveloperMode="true" ClientEnabled="true" ServerEnabled="true" TelemetryVersion="1.0.0" />
